/CONTROL/
	OPTION = NSOURCE;
	ACCURACY = ALL QUEUE;
	TMAX = 100000;


/DECLARE/
	QUEUE SRC,LIEN1,LIEN2,LIEN3;
	INTEGER NbPertes,NbRejets,Erlang,I,J,C,NbSimu,Duree;
	REAL SOMME,LAMBDA,MU,REJET,X,RhoNorm,RHO, LAM;
	CUSTOMER REAL DUREE;
	REF CUSTOMER CUST;

/STATION/
	NAME=SRC;
	TYPE=SOURCE;
	SERVICE=
		BEGIN
			EXP(1./LAM);
			IF(CUSTNB(LIEN1)<C)THEN
					BEGIN
					DUREE:=(1./MU);
					TRANSIT(LIEN1);
				END
			ELSE
			IF((CUSTNB(LIEN2)<C) AND (CUSTNB(LIEN3)<C))THEN
				BEGIN
					Duree:=(1./MU);
					CUST:=NEW(CUSTOMER);
					CUST.DUREE:=Duree;
					TRANSIT(CUST,LIEN2);
					TRANSIT(LIEN3);
				END
			ELSE
				BEGIN
					NbPertes := NbPertes+1;
				END;
		END;


/STATION/
	NAME=LIEN1;
	TYPE=MULTIPLE(C);
	SERVICE=CST(DUREE);
	TRANSIT=OUT;

/STATION/
	NAME=LIEN2;
	TYPE=MULTIPLE(C);
	SERVICE=CST(DUREE);
	TRANSIT=OUT;

/STATION/
	NAME=LIEN3;
	TYPE=MULTIPLE(C);
	SERVICE=CST(DUREE);
	TRANSIT=OUT;

/EXEC/
	BEGIN
		MU:= 1./180;
		Erlang:= 50;
		NbSimu:=10;


		FOR RHO:=10 STEP 10 UNTIL Erlang DO
			BEGIN 
			LAM:=MU*RHO;

				FOR C:=RHO STEP (RHO/2) UNTIL 2*RHO DO
					BEGIN
					RhoNorm:= RHO/C; 

					FOR I:=1 STEP 1 UNTIL NbSimu DO
						BEGIN
							X:=1;
							SOMME:= 1;
							NbRejets:= 0;
							
							FOR J:= 1 STEP 1 UNTIL C DO
								BEGIN
								X:= X*RHO/J;
								SOMME:=SOMME+X;
								
								END;
							REJET:= X*1./SOMME;
							SIMUL;
						END;
							WRITELN("Rejets :", REJET);
							WRITELN("Charge normalisÃ©e :",RhoNorm);
							WRITELN("Erlang :",RHO);
							WRITELN("Capacite :", C);
					END;
			END;
	END;
				
/END/
